<h1>Here's my To Do List!</h1>
<p>Look at all my fancy CSS styling! B-)</p>

<form action='/' method='POST'>
  <strong>New Task:</strong>
  <input type='text' name='task' placeholder='task content' />
  <input type='text' name='date' placeholder='due date' />
  <input type='submit' value='Save'>
</form>

<ul>
<% @lines.each do |line| %>
<li> <%= line %> </li>
<% end %>
</ul>

<link rel="stylesheet" type="text/css" href="toDoStyle.css">
